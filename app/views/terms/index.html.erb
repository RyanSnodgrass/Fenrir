
  
  <div class="row">
    <div class="large-12 columns">
      <h1 class="page-title">Glossary</h1>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="medium-9 large-3 medium-push-9 columns">
        <div class="panel">
          <form>
          <div class="row">
          <div class="large-12 columns">
            <%= form_for(:tags, :url=>{:action=>'index'}, :html => { :method => 'GET'}) do |f| %>
            <p>Search Glossary: <%= f.text_field :search1, id: "search1" %></p>
          <% end %>
          </div>
          </div>
          <div class="row">
          <div class="large-12 columns">
            <label>Responsible Organization</label>
            <select>
              <option value="chicken">All</option>
              <option value="beef">Human Resources</option>
              <option value="hotdog">Provost</option>
              <option value="apollo">Registrar</option>
              <option value="steak">Finance</option>
            </select>
          </div>
          </div>
          </form>
        </div>
      </div>
      <div class="medium-6 large-9 medium-pull-3 columns" id="search_results"> 
        <%@results.each do |result| %>
         <% if result[:type]  == 'term' then %> 
            <a href="../terms/<%=result[:data]["name"]%>"> <strong> 
            <% if result[:m_name]  then %> 
               <%= result[:m_name].html_safe %></strong> </a> </br>   
            <%else %>
               <%=result[:data]["name"] %></strong> </a> </br>  
            <%end%>
            <% if result[:m_definition]  then %> 
              <p> <%=  result[:m_definition].html_safe %></p>
          <%else %>
              <p>  <%= result[:data]["definition"] %></p>
          <%end%>
          <% end %>     
         <% end %>
        <%= will_paginate(@results, :class => "apple_pagination") %> <br>
     
     
      </div>
    </div>
  </div>